{
	"title": "PixelNode",
	"inputMode": "server",

	"webServer": {
		"start": true,
		"port": 3001
	},

	"pixelDrivers": [
		{
			"module": "pixelnode-driver-fadecandy",
			"address": "127.0.0.1",
			"port": 7890,
			"delay": 50
		},
		{
			"module": "pixelnode-driver-websimulator",
			"delay": 50
		}
	],

	"inputs": [
		{
			"name": "touch",
			"module": "./PixelNode_Input"
		},
		{
			"name": "rgb1",
			"module": "./PixelNode_Input"
		},
		{
			"name": "rgb2",
			"module": "./PixelNode_Input"
		},
		{
			"name": "nunchuk1",
			"module": "./PixelNode_Input"
		},
		{
			"name": "nunchuk2",
			"module": "./PixelNode_Input"
		},
		{
			"name": "switch",
			"module": "./PixelNode_Input_WebSocket"
		},
		{
			"name": "touchrgb",
			"module": "./PixelNode_Input_TouchRGB"
		}
	],

	"queue": [
		{ "effect": "Off", "duration": 150 },
		{ "effect": "Ray", "duration": 10000 },
		{ "effect": "Glitter", "duration": 10000 },
		{ "effect": "Color", "duration": 1000 },
		{ "effect": "RainBow", "duration": 10000 },
		{ "effect": "RainBowRings", "duration": 10000 },
		{ "effect": "RedBlue", "duration": 10000 }
	],
	"effects": [
		{
			"name": "Color",
			"module": "./PixelNode_Effect_Color",
			"inputs": {
			},
			"outputs": [
				{
					"name": "color",
					"targets": [
						"domePixels.rings",
						"player1.rings",
						"player2.rings"
					]
				},
				{
					"name": "colorselect",
					"targets": [
						"touch.rings"
					]
				}
			]
		},
		{
			"name": "Off",
			"module": "./PixelNode_Effect_off",
			"inputs": {
			},
			"outputs": [
				{
					"name": "black",
					"targets": [
						"domePixels.rings",
						"touch.rings",
						"inside.rings",
						"player1.rings",
						"player2.rings"
					]
				}
			]
		},
		{
			"name": "Ray",
			"module": "./PixelNode_Effect_Ray",
			"inputs": {
				"color1": "rgb1.color",
				"color2": "rgb2.color",
				"stopper": "touch.values"
			},
			"outputs": [
				{
					"name": "glow",
					"targets": [
						"domePixels.strips"
					]
				}
			]
		},
		{
			"name": "Glitter",
			"module": "./PixelNode_Effect_Glitter",
			"inputs": {
				"color1": "rgb1.color",
				"color2": "rgb2.color",
				"stopper": "touch.values"
			},
			"outputs": [
				{
					"name": "glow",
					"targets": [
						"domePixels.rings",
						"player1.strips",
						"player2.strips"
					]
				}
			]
		},
		{
			"name": "RainBow",
			"module": "./PixelNode_Effect_Rainbow",
			"scale": 10,
			"speed": 1,
			"inputs": {
				"color1": "rgb1.color",
				"color2": "rgb2.color",
				"stopper": "touch.values"
			},
			"outputs": [
				{
					"name": "rainbow",
					"targets": [
						"domePixels.strips",
						"touch.strips"
					]
				},
				{
					"name": "black",
					"targets": [
						"player1.rings",
						"player2.rings"
					]
				}
			]
		},		
		{
			"name": "ColorRing",
			"module": "./PixelNode_Effect_Rainbow",
			"scale": 1,
			"speed": 0,
			"inputs": {
				"color1": "rgb1.color",
				"color2": "rgb2.color",
				"stopper": "touch.values"
			},
			"outputs": [
				{
					"name": "rainbow",
					"targets": [
						"touch.rings"
					]
				}
			]
		},		
		{
			"name": "RainBowRings",
			"module": "./PixelNode_Effect_Rainbow",
			"scale": 1,
			"speed": 100,
			"inputs": {
				"color1": "rgb1.color",
				"color2": "rgb2.color",
				"stopper": "touch.values"
			},
			"outputs": [
				{
					"name": "rainbow",
					"targets": [
						"domePixels.rings",
						"player1.rings",
						"player2.rings"
					]
				}
			]
		},		
		{
			"name": "RedBlue",
			"module": "./PixelNode_Effect_RedBlue",
			"inputs": {
				"color1": "rgb1.color",
				"color2": "rgb2.color",
				"stopper": "touch.values"
			},
			"outputs": [
				{
					"name": "glow",
					"targets": [
						"domePixels.strips",
						"player1.strips",
						"player2.strips"
					]
				}
			]
		}
	]
}