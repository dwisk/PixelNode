extends /layout/basic

block head
	link(rel='stylesheet', href='/input.css')

block foot
	script(src='/socket.io/socket.io.js')
	script(src='/input.js')

block body
	div(ng-controller="SimulatorCtrl" class="container")
		h2 {{effect.name}}
		div(class='slider col-xs-12 responsive')
			slick(infinite="true", 
				slides-to-show="3",
				slides-to-scroll="3",
				arrows="false",
				center-mode="true",
				current-index="queueId",
				focus-on-select="true",
				center-padding="60px")

				each effect in config.queue
					div
						img(src='/effects/#{effect.effect}/icon.png')

		
		div 
			p(ng-class="{deactivated: !autoplay}", ng-click="autoplay = !autoplay") Autoplay 
				span(ng-show="autoplay") ON 
				span(ng-hide="autoplay") OFF 