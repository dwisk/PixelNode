		},
		{
			"name": "rainbows",
			"title": "Rainbows and more",
			"module": "../games/PixelNode_Game_Animation",
			"queue": [
				{ "effect": "RainBow", "duration": 30000 },
				{ "effect": "RainBowRings", "duration": 30000 },
				{ "effect": "RedBlue", "duration": 30000 }
			],
			"effects": [
				{
					"name": "RainBow",
					"module": "../../effects/PixelNode_Effect_Rainbow",
					"scale": 10,
					"speed": 5,
					"inputs": {
						"color1": "rgb1.color",
						"color2": "rgb2.color",
						"stopper": "touch.values"
					},
					"outputs": [
						{
							"name": "rainbow",
