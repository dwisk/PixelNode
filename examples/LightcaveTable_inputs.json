[
	{
		"name": "switch",
		"module": "../inputs/PixelNode_Input_WebSocket"
	},
	{
		"name": "buttons",
		"module": "pixelnode-input-bbbgpio",
		"pins": [
			{ "number": "P8_12", "input": "button_left", "default": false },
			{ "number": "P8_10", "input": "button_right", "default": false },
			{ "number": "P8_8", "input": "button_back", "default": false }
		]
	},
	{
		"name": "touch",
		"modulex": "pixelnode-input",
		"module": "pixelnode-input-mpr121", 
		"i2c_bus": 2,
		"offset": 1,
		"verbose": false,
		"timer": 50,
		"treshold_touch": 1200,
		"treshold_release": 20
	},
	{
		"name": "rgb",
		"moduleX": "pixelnode-input",
		"module": "pixelnode-input-bbbtcs34725",
		"data_target": "rgbsensors",
		"sensors": [
			{
				"name"	  : "color_left",
			    "bus"     : "/dev/i2c-2", 
			    "led_pin" : "P9_23", 
			    "irq_pin" : "P9_15",
			    "enable"  : "inputs.buttons.button_left"
			},
			{
				"name"	  : "color_right",
				"bus"     : "/dev/i2c-1", 
				"led_pin" : "P9_25", 
				"irq_pin" : "P9_27",
				"enable"  : "inputs.buttons.button_right"
		    }
		]
	}
]	